@model IEnumerable<BookModel>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

<br />


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                   Title
                </th>
                <th>
                    Description
                </th>
        
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">@obj.Id</td>
                    <td width="30%">@obj.Title</td>
                    <td width="30%">@obj.Description</td>
          
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p> No product exists.</p>
}

</div>
